#. type: SH
#, no-wrap
msgid "SYNOPSIS"
msgstr "ÜBERSICHT"

#. type: Plain text
msgid "#include E<lt>linux/random.hE<gt>"
msgstr "#include E<lt>linux/random.hE<gt>"

#. type: Plain text
msgid "B<int ioctl(>I<fd>B<, RND>I<request>B<, >I<param>B<);>"
