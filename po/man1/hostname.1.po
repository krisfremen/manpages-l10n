#, no-wrap
msgid "FILES"
msgstr "DATEIEN"

#. type: Plain text
msgid "B</etc/hosts>"
msgstr ""

#. type: Plain text
msgid ""
"B</etc/hostname> This file should only contain the hostname and not the full "
"FQDN."
msgstr ""

